root = true

[*]
end_of_line = lf
charset = utf-8
max_line_length = 120
insert_final_newline = true

[{.*rc,*.json,*.yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{*.js,*.php}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
